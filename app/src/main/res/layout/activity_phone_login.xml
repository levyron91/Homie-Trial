<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".login.PhoneLoginActivity">
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
    </LinearLayout>
    <LinearLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My number is"
            android:fontFamily="@font/promptbold"
            android:textSize="30dp"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VN +84"
                android:fontFamily="@font/promptlight"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edPhoneNumber"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number"
                android:maxLines="1"
                android:textSize="15dp"
                android:digits="0123456789"
                android:inputType="phone"
                android:fontFamily="@font/promptlight"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/promptlight"
            android:text="When you tap Continue, HOMIE will send a text with verification code. Message and data rates may apply. The verified phone number can be used to login."/>
    </LinearLayout>
    <LinearLayout
        android:paddingHorizontal="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvContinue"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONTINUE"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:background="@drawable/corner_button_select"
            android:fontFamily="@font/promptbold"
            />
    </LinearLayout>


</LinearLayout>