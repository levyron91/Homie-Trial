<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".profile.SettingActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Toolbar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:background="#FFF">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/btnBack"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/back"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/promptlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:textColor="#000"
                    android:textSize="20dp"/>
            </LinearLayout>

            <!--Account Setting-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptbold"
                    android:text="Account Setting"
                    android:textSize="18dp"/>

                <!--Phone Number Setting-->
                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner_layout">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/promptlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_marginRight="35dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/promptlight"
                        android:text="0123456789"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/promptlight"
                        android:text=">"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Verify a Phone Number to help secure your account."
                    android:textSize="13dp"/>

                <!--Email Setting-->
                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner_layout">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/promptlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#000"/>

                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvEmail"
                        android:layout_marginRight="35dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/promptlight"
                        android:text="TelHaiSchool@gmail.com"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/promptlight"
                        android:text=">"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Verify your Email to help secure your account."
                    android:textSize="13dp"/>

            </LinearLayout>

            <!--Discovery Settings-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptbold"
                    android:text="Discovery Settings"
                    android:textSize="18dp"/>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner_layout">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/promptlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_marginRight="25dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/promptbold"
                        android:text="Current Location"
                        android:textSize="15dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#03A9F4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Change your swipe location to see Tinder members in other cities"
                    android:textSize="13dp"/>
            </LinearLayout>

            <!--Show me-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_layout"
                    android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/promptbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show me"
                    android:textSize="17dp"
                    android:textColor="#fd4071"/>
                <RelativeLayout
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvShowMe"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/promptlight"
                        android:text="Men"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/promptlight"
                        android:text=">"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="HOMIE uses these preferences to suggest matches."
                    android:textSize="13dp"/>
            </LinearLayout>

            <!--Maximum Distance-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_layout"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/promptbold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximum Distance"
                            android:textSize="17dp"
                            android:textColor="#fd4071"/>
                        <TextView
                            android:id="@+id/tvKm"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/promptbold"
                            android:textSize="16dp"
                            android:text="50k."/>

                    </RelativeLayout>
                    <com.hiepdt.tinderapp.profile.seekbar.SingleSeekBar
                        android:id="@+id/singleSeek"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:left_thumb_color="#fd4071"
                        app:left_thumb_color_pressed="#fd4071"
                        app:bar_highlight_color="#fd4071"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="HOMIE uses these preferences to suggest matches."
                    android:textSize="13dp"/>
            </LinearLayout>

            <!--Age Range-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_layout"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/promptbold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age Range"
                            android:textSize="17dp"
                            android:textColor="#fd4071"/>
                        <TextView
                            android:id="@+id/tvAge"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/promptbold"
                            android:text="20"
                            android:textSize="16dp"/>

                    </RelativeLayout>

                    <com.hiepdt.tinderapp.profile.seekbar.RangeSeekBar
                        android:id="@+id/rangeSeek"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:left_thumb_color="#fd4071"
                        app:left_thumb_color_pressed="#fd4071"
                        app:right_thumb_color="#fd4071"
                        app:right_thumb_color_pressed="#fd4071"
                        app:bar_highlight_color="#fd4071"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="HOMIE uses these preferences to suggest matches."
                    android:textSize="13dp"/>
            </LinearLayout>

            <!--Show Top Picks-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner_layout">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/promptlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show me Top picks"
                        android:textColor="#000"/>

                    <Switch
                        android:id="@+id/swTop"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#fd4071"/>

                </RelativeLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Change your swipe location to see Facebook members in other cities"
                    android:textSize="13dp" />
            </LinearLayout>

            <!--Show me on Tinder-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner_layout">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/promptlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show me on Facebook"
                        android:textColor="#000"/>

                    <Switch
                        android:id="@+id/swShowMe"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="#fd4071"/>

                </RelativeLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Change your swipe location to see Facebook members in other cities"
                    android:textSize="13dp" />
            </LinearLayout>

            <!--Help & Support-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptbold"
                    android:text="Contact Us"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:id="@+id/btnSupport"
                    android:gravity="center"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/corner_layout">

                    <TextView
                        android:fontFamily="@font/promptbold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support"
                        android:textSize="17dp" />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/bug"/>
                </LinearLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:paddingHorizontal="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Change your swipe location to see Facebook members in other cities"
                    android:textSize="13dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_layout"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/promptbold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Legal"
                            android:textSize="17dp"
                            android:textColor="#fd4071"/>
                        <RelativeLayout
                            android:paddingTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/promptlight"
                                android:text="Licenses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/promptlight"
                                android:text=">"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:paddingTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/promptlight"
                                android:text="Privacy Policy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/promptlight"
                                android:text=">"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:paddingTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/promptlight"
                                android:text="Author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/promptlight"
                                android:text=">"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--Logout-->
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:gravity="center_vertical|center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/corner_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptbold"
                    android:textSize="17dp"
                    android:text="Logout"/>
            </LinearLayout>

            <!--Version-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"
                android:gravity="center_vertical|center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/avatar_pink_512"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptlight"
                    android:text="Version 10.0.1"/>

            </LinearLayout>

            <!--Delete Account-->
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="25dp"
                android:gravity="center_vertical|center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/corner_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/promptbold"
                    android:text="Delete Account"
                    android:textColor="#E64D4D"
                    android:textSize="17dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>